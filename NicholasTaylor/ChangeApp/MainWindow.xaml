<Window x:Class="ChangeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Calculator" Height="200" Width="350" Background="Beige">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Enter the amount:" Height="29" VerticalAlignment="Top" />
        <Label Grid.Column="0" Content="$" VerticalAlignment="Top" Margin="0,34,0,0" HorizontalAlignment="Left" Width="20"/>
        <Label Name="lblMessage" Grid.Column="0" Content="" VerticalAlignment="Top" Margin="0,78,0,0" Height="81" TextBlock.Foreground="Red" />
        <TextBox Name="txbAmount" Grid.Column="0" Height="25" Margin="20,34,24,0" VerticalAlignment="Top" TextChanged="txbAmount_TextChanged_1"/>
        <Label Grid.Column="1" Name="lblChangeBreakdown" />
    </Grid>
</Window>
